<div class="middle-box">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"floatingInput", placeholder:"name@example.com", type:"email", required: true %>
    <%= f.label :email, for:"floatingInput" %>
  </div>

  <div class="field form-floating mb-3">
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"floatingPassword", placeholder:"Password", minlength:"6", type:"password", required: true %>
    <%= f.label :password, for:"floatingPassword" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-success" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>