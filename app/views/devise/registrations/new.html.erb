<div class="middle-box">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"floatingInput", placeholder:"name@example.com", type:"email", required: true %>
    <%= f.label :email, for:"floatingInput" %>
  </div>

  <div>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <div class="field form-floating mb-3">
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"floatingPassword", placeholder:"Password", minlength:"6", type:"password", required: true %>
    <%= f.label :password, for:"floatingPassword" %>
    </div>
  </div>

  <div class="field form-floating mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"floatingPassword", placeholder:"Password", minlength:"6", type:"password", required: true %>
    <%= f.label :password_confirmation, for:"floatingPassword" %><br />
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-success" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>